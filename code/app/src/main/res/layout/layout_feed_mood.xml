<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12sp">

    <LinearLayout
        android:id="@+id/mood_details_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="642dp"
        android:background="@drawable/layout_rounded_mood_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:contentDescription="User icon"
                app:srcCompat="@drawable/profile_pic"
                android:clickable="true" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="\@user"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="date"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/emotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Emotion"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/social_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="(social situation)"
                android:textColor="@color/fear_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Reason"
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"/>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->

<!--            <ImageView-->
<!--                android:id="@+id/social_situation_icon"-->
<!--                android:layout_width="15sp"-->
<!--                android:layout_height="15sp"-->
<!--                android:layout_marginLeft="10sp"-->
<!--                android:layout_weight="0"-->
<!--                app:srcCompat="@android:drawable/ic_menu_myplaces" />-->

<!--        </LinearLayout>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>