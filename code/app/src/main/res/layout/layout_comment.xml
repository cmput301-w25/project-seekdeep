<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/commenter_pfp"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/noto_sans"
        android:text="Username"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/commenter_pfp"
        app:layout_constraintStart_toEndOf="@+id/commenter_pfp"
        app:layout_constraintTop_toTopOf="@+id/commenter_pfp" />

    <TextView
        android:id="@+id/comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/noto_sans"
        android:text="Comment"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/commenter_pfp"
        app:layout_constraintStart_toEndOf="@+id/username_text_view"
        app:layout_constraintTop_toTopOf="@+id/commenter_pfp" />
</androidx.constraintlayout.widget.ConstraintLayout>